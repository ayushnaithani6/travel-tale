<%- include ("../partials/header") %>

    <div class="container">
        <h1 style="text-align: center;">Add New Comment to <%=blog.name%></h1>
        <div class="formview">
            <form action="/blogs/<%=blog._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type=text name="comment[text]" placeholder="Comment Here">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>
    </div>


<%- include ("../partials/footer") %>