<%- include ("./partials/header") %>

<div class="container">
    <h1 style="text-align: center;"> Login </h1>
    <div class = "formview">
        <form action="/login" method="POST">
            <div class="form-group">
                <label for="username">Username</label>
                <input class="form-control" type="text" id="username" placeholder="Username" name="username">
            </div>
            
            <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" id="password" placeholder="Password" name="password">
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        
        <div class="text-center"> <a href="/forgot">Forgotten Username or Password ? </a> </div>
        
        <div> <hr> </div>

        <div>
            <a class="btn btn-lg btn-success btn-block" href="/register">Create New Account</a>
        </div>

    </div>
</div>




<%- include ("./partials/footer") %>